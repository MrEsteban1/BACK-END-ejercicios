<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Productos</title>
    <!-- <link rel="stylesheet" href="./style.css" /> -->
    <style>
      nav {
        background-color: rgb(121, 121, 204);
        display: flex;
        justify-content: space-evenly;
        align-items: center;
        width: 100%;
        height: 80px;
        color: wheat;
      }
      nav button {
        padding: 20px;
      }
      img {
        width: 100px;
        height: 100px;
        border: solid black;
      }
      table {
        margin-top: 20px;
        border: solid;
        width: 100%;
      }
      th {
        padding: 30px;
        background-color: rgb(225, 184, 184);
      }
      .form-group {
        margin: 20px;
      }
    </style>
  </head>
  <body>
    <%- include('./partials/header'); %>
<table class="table table-dark">
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">NOMBRE</th>
        <th scope="col">PRECIO</th>
        <th scope="col">IMAGEN</th>
      </tr>
    </thead>
    <% productos.forEach(producto => {  %>
        <tr>
          <th scope="row"><%-producto.id%></th>
          <th scope="row"><%-producto.title%></th>
          <th scope="row"><%-producto.price%></th>
          <th scope="row"><img src="<%-producto.thumbnail%>"/></th>
        </tr>
        <% } ) %>
      </tbody>
  </table>
</body>
</html>