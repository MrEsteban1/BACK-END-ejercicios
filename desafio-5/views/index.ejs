<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Productos</title>
    <!-- <link rel="stylesheet" href="./style.css" /> -->
    <style>
      nav {
        background-color: rgb(121, 121, 204);
        display: flex;
        justify-content: space-evenly;
        align-items: center;
        width: 100%;
        height: 80px;
        color: wheat;
      }
      nav button {
        padding: 20px;
      }
      img {
        width: 100px;
        height: 100px;
        border: solid black;
      }
      table {
        margin-top: 20px;
        border: solid;
        width: 100%;
      }
      th {
        padding: 30px;
        background-color: rgb(225, 184, 184);
      }
      .form-group {
        margin: 20px;
      }
    </style>
  </head>
  <body>
    <%- include('./partials/header'); %>
    <h2>Ingrese un producto</h2>
    <form
      action="/producto"
      method="post"
      class="myForm"
      enctype="application/json"
    >
      <div class="form-group">
        <label for="title">Nombre</label>
        <input type="text" name="title" class="form-control" />
      </div>
      <div class="form-group">
        <label for="price">Precio</label>
        <input type="number" name="price" class="form-control" />
      </div>
      <div class="form-group">
        <label for="thumbnail">Ingrese link a la imagen del producto</label>
        <input
          type="text"
          name="thumbnail"
          class="form-control"
          min="0"
          max="120"
        />
      </div>
      <button type="submit" class="btn btn-primary">Enviar</button>
    </form>
  </body>
</html>
